<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

    <mvc:annotation-driven/>

    <context:component-scan base-package="io.github.javageeks.mase.web"/>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/todos/**"/>
            <mvc:mapping path="/account/**"/>
            <bean class="io.github.javageeks.mase.web.util.SessionHandlerInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors>

    <bean id="sessionData" class="io.github.javageeks.mase.web.util.SessionData" scope="session">
        <aop:scoped-proxy/>
    </bean>

</beans>